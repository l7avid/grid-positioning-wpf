<Window x:Class="WPF02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0">I'm in column 0 and row 0</Button>
        <Button Grid.Column="1" Grid.Row="0">I'm in column 1 and row 0</Button>
        <Button Grid.Column="0" Grid.Row="1">I'm in column 0 and row 1</Button>
        <Button Grid.Column="1" Grid.Row="1">I'm in column 1 and row 1</Button>
        <Button Grid.Column="0" Grid.Row="2">I'm in column 0 and row 2</Button>
        <Button Grid.Column="1" Grid.Row="2">I'm in column 1 and row 2</Button>
        <Button Grid.Column="0" Grid.Row="3">I'm in column 0 and row 3</Button>
        <Button Grid.Column="1" Grid.Row="3">I'm in column 1 and row 3</Button>
    </Grid>
</Window>
